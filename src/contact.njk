<h1>{{ title }}</h1>
<p>Please use the form below to get in touch with me. I'll do my best to get back to you as soon as possible.</p>
<form action="/submit-form" method="post" class="contact-form stack" data-netlify-recaptcha="true" netlify>
  <label class="contact-form-child" for="name">Name: <input type="text" id="name" name="name" placeholder="full name" required>
  </label>
  <label class="contact-form-child" for="email">Email: <input type="email" id="email" name="email" placeholder="abc@email.com" required>
  </label>
  <label class="contact-form-child" for="phone">Phone (optional): <input type="tel" id="phone" name="phone" placeholder="(555) 555-5555">
  </label>
  <label class="contact-form-child" for="message">Message:
    <textarea id="message" name="message" placeholder="Enter your message here" rows="5" required></textarea>
  </label>
  <div data-netlify-recaptcha="true"></div>
  <button class="contact-form-child btn-primary" type="submit">Submit</button>
</form>
<script>
  const phone = document.getElementById("phone");
  phone.addEventListener("keypress", function (ev) {
    ev.preventDefault();
    ev.stopPropagation();
    if (/^[0-9]$/.test(ev.key)) {
      const numericString = phone.value.replace(/[^0-9]/g, "") + ev.key;
      const arr = Array.from(numericString);
      let result = "";
      for (let i = 0; i < arr.length && i < 10; i++) {
        if (i === 0) {
          result = "(";
        } else if (i === 3) {
          result += ") ";
        } else if (i === 6) {
          result += "-";
        }
        result += arr[i];
      }
      phone.value = result;
    }
  });
</script>